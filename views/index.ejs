        var idUser1 = "<%= idUser%>";
        var name = "<%= nameReceiver%>"
        var idReceiver1 = "<%= idReceiver%>"
        console.log(idUser1)
    </script>
</head>

<body>
    <div class="container-fuild">
        <div class="container-top">
            <% if(message.length > 0 ){ %>
                <div class="notification">
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <h4 class="alert-heading">Thông báo!</h4>
                        <strong>Xin chào!</strong>
                        <%= message %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                </div>
                <% } %>
                    <div class="user">
                        <div class="user-container hover" data-toggle="modal" data-target="#exampleModal">
                            <div class="hover user-image"></div>
                            <div class="user-name">
                                <% if(user){%>
                                    <%= user %>
                                        <% }%>
                            </div>
                        </div>
                        <div class="user-more icon hover">
                            <i class="fas fa-plus"></i>
                        </div>
                        <div class="user-notification icon hover">
                            <i class="fas fa-bell"></i>
                        </div>
                        <div class="user-sigup icon hover">
                            <i class="fas fa-caret-down"></i>
                        </div>
                    </div>
        </div>
        <div class="content-bottom">
            <div class="container-left">
                <div class="container-listChat">
                    <div class="title">
                        <div>Chat</div>
                        <div class="icon">
                            <div>
                                <i class="fas fa-cog"></i>
                            </div>
                        </div>
                    </div>
                    <div id="focus">
                        <div class="search">
                            <i class="fas fa-search"></i>
                            <input maxlength="20" class="searchName" name="searchName" type="text" id="searchName" value="" placeholder="Tìm kiếm trên Messenger">
                        </div>
                        <div id="suggesstion-box" style="display: block;" class="suggesstion-box">
                            <div id="text"></div>
                            <div id="list-suggesstion"></div>
                        </div>
                    </div>
                </div>
            </div>
            <%if(status.length > 0 ){%>

                <div class="container-right">
                    <div class="chat">
                        <div class="top">
                            <img src="assets/image/user.jpg" alt="">
                            <div>
                                <span id="nameReceiver" class="nameReceiver">Người dùng</span><br>
                                <span class="activate">Hoạt dộng 2 giờ trước</span>
                            </div>
                            <div class="call">
                                <div><i class="fas fa-phone-alt"></i></div>
                                <div><i class="fas fa-video"></i></div>
                                <div><i class="fas fa-exclamation-circle"></i></div>
                            </div>
                        </div>
                        <div class="mid" id="mid">
                            <div class="content" id="content"></div>
                        </div>
                        <div class="bottom">
                            <div><i class="fas fa-plus"></i></div>
                            <div><i class="far fa-smile-wink"></i></div>
                            <div><i class="fas fa-image"></i></div>
                            <div class="contentSend"><input onkeydown="return processKey(event)" class="message" name="message" id="contentMessage" placeholder="Nhập nội dung của bản" type="text"></div>
                            <div onclick="btnSend()" class="button-send" id="button-send"><i class="fas fa-paper-plane"></i></div>
                        </div>
                    </div>
                    <div class="setting">
                        <div class="settingReceiver">
                            <img src="assets/image/user.jpg" alt="">
                            <span class="nameReceiver">Người dùng</span>
                            <span class="activate">Hoạt động 2 giờ trước</span>
                        </div>
                        <!-- <div class="addFriend">
                        <button id="" onclick=addFriend() class=""></button>
                        <button id="" onclick=cancelInvitation() class=""></button>
                        <button id="" onclick=cancelFriend() class=""></button>
                        <div id="" class="confim">
                            <button id="" onclick=confimInvitation() class=""></button>
                            <button id="" onclick=deleteInvitation() class=""></button>
                        </div>
                    </div> -->
                        <div class="test">Tùy chỉnh đoạn <i class="fas fa-angle-down"></i></div>
                        <div class="test">Quyền riêng tư & hỗ trợ <i class="fas fa-angle-down"></i></div>
                        <div class="test">Tệp được chia sẻ <i class="fas fa-angle-down"></i></div>
                        <div class="test">Ảnh đã chia sẻ <i class="fas fa-angle-down"></i></div>
                    </div>
                </div>
                <%}%>
        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Cập nhật ảnh đại diện của bạn</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
                </div>
                <div class="modal-body">
                    <span style="font-size: 18px;">Tải ảnh lên: </span><input class="file-anh" id="file-anh" type="file">
                    <img src="" id="blah" />
                </div>
                <div class="modal-footer">
                    <button type="button" id="btn-secondary" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="updateImage(idUser1)">Save changes</button>
                </div>
            </div>
        </div>
    </div>

</body>

</html>